{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleDetection": "force",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "types": ["jest", "node"],
    "noEmit": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": ["build"]
}
